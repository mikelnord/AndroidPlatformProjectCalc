<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProjectCalc" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/fonimage</item>
        <item name="materialButtonStyle">@style/StyleButtonCalc</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Theme.ProjectCalcDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/lightgray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/StyleButtonCalcDark</item>
        <item name="android:windowBackground">@drawable/fonimagedark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.ProjectCalcBroun" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brounPrimary</item>
        <item name="colorPrimaryVariant">@color/brounPrimaryVariant</item>
        <item name="colorOnPrimary">@color/brounOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brounSecondary</item>
        <item name="colorSecondaryVariant">@color/brounSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/StyleButtonCalcBroun</item>
        <item name="android:windowBackground">@drawable/fonimagebroun</item>
        <item name="android:textColor">@color/brounOnPrimary</item>
    </style>


</resources>